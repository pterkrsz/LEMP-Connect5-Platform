    "Bucket": "local_system",
    "Org": "local_org",
    "NodeId": "node0"
  },
  "SmartMeter": {
    "SerialPort": "/dev/ttyACM0",
    "PollingIntervalSeconds": 5
  },
  "Inverter": {
